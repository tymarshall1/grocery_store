extends layout
block content
    div(class="flex-col-container mb-2")
        h1(class="mb-1 font-size-lg")=title
        a(class="btn-link",href="/categories/create") Create Category 
    div(class="card-container")
        each category in allCategories
            div(class="card mb-2")
                h1(class='capitalize mb-1')=category.name
                p(class="mb-1 capitalize")=category.description
                div(class="update-del-btns")
                    a(href=category.url, class="btn-link bg-white capitalize")="View " + category.name
                    a(class="capitalize btn-link bg-white",href="update/" + category._id)="Update " + category.name + " Category"
                    a(class="capitalize btn-link bg-white",href="delete/" + category._id)="Delete " + category.name + " Category"